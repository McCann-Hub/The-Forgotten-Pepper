@font-face {
   font-family: forty-two;
   src: url('~@fonts/42.ttf');
}

:root {
  --header-height: 7rem;
}

#app {
  font-family: Helvetica, Arial, sans-serif;
}

#app::before {
  content: "";       
  /*background-image: url('~@theme/assets/background_vanilla.svg');*/
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  opacity: 0.75;
  filter: brightness(1.25);
  transition: filter var(--transition-duration);
  height: 100%;
  left: 0;
  position: absolute;
  top: 0;
  width: 100%;
  z-index: -1;
}

.dark #app::before {
  filter: brightness(0.75);
}

.forgotten-pepper {
  background: url('~@theme/assets/logo.png');
  background-repeat: no-repeat;
  background-size: contain;
}

.header-dropdown {
    ul {
        @apply: bg-secondary-400;

        li:hover {
            @apply: bg-primary-500;
        }
    }
}

.dark {
    .header-dropdown {
        ul {
            @apply: bg-primary-600;

            li:hover {
                @apply: bg-secondary-500;
            }
        }
    }
}

.page-card {
    @apply: bg-primary-300 bg-opacity-90 text-text-700;
}

.dark {
    .page-card {
        @apply: bg-primary-700 bg-opacity-90 text-text-300
    }
}

.tag-pill {
    @apply: bg-accent-500 text-text-200
}
.dark {
    .tag-pill {
        @apply: bg-accent-500 text-text-200
    }
}
