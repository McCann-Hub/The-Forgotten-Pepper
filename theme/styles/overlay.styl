#overlay {
    @apply: bg-gray-900 bg-opacity-90;

    #close {
        @apply: text-gray-500;

        &:hover {
            @apply: text-gray-50;
        }
    }
}

.dark {
    #overlay {
        @apply: bg-gray-100 bg-opacity-90;

        #close {
            @apply: text-gray-400;

            &:hover {
                @apply: text-gray-900;
            }
        }
    }
}